@model IEnumerable<Shop.Models.Category>

@{
    ViewBag.Title = "Kategorie";
}

<h2>Kategorie</h2>

@using (Html.BeginForm("Index", "Categories", FormMethod.Get))
{
}
@if (Context.User.IsInRole("Admin"))
{
    @Html.ActionLink("Dodaj Kategorię", "Create", null, new { @class = "btn btn-primary btn-large" })
}
<div class="table">

    <ul id="horizontal-list">

        @foreach (var item in Model)
            {
            <li>
                <a href='@Url.Action("Details", new { @id = item.Id })'>
                    <img src="~/Resources/@item.Photo" alt="Zdjęcie" height="200" width="200" />
                </a><br />
                @Html.DisplayFor(modelItem => item.Name)<br />
                @if (Context.User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edytuj      ", "Edit", new { id = item.Id })
                    @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
                }

            </li>
        }
    </ul>
</div>
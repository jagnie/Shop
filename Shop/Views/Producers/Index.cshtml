@model PagedList.IPagedList<Shop.Models.Producer>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Producenci";
}

<h2>Producenci</h2>

@using (Html.BeginForm("Index", "Producers", FormMethod.Get))
{
    <p>
        Wyszukaj:@Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Szukaj" class="btn btn-primary btn-large" />
    </p>
}
    @if (Context.User.IsInRole("Admin"))
        {
            @Html.ActionLink("Dodaj Producenta", "Create", null, new { @class = "btn btn-primary btn-large" })
        }
<div class="table">

    <ul id="horizontal-list">

        @foreach (var item in Model)
            {
            <li>
                <a href='@Url.Action("Details", new { @id = item.Id })'>
                    <img src="~/Resources/@item.Photo" alt="Zdjęcie" height="200" width="200" />
                </a><br />
                @Html.DisplayFor(modelItem => item.Name)<br />
                @if (Context.User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edytuj      ", "Edit", new { id = item.Id })
                    @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
                }

            </li>
        }
    </ul>
</div>
<br />
@*Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount*@

@Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))

